<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_auth_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Auth" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_profile_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/id_auth_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/id_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_profile_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Name" />

    <Button
        android:id="@+id/id_follow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_name_view"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"
        android:text="Follow" />
</RelativeLayout>
